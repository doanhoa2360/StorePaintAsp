@model IEnumerable<MyClass.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<section class="content my-2">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger text-uppercase">QUẢN LÝ TÀI KHOẢN</strong>
                </div>
                <div class="col-md-6 text-right">

                   
                </div>
            </div>
        </div>
        <div class="card-body">
            @Html.Partial("Message")
            <table class="table table-bUsered table-striped" id="myTable">
                <thead>
                    <tr>
                        <th class="text center" style="width:20px;">#</th>
                        <th>Họ tên khách hàng</th>
                        <th>Tên đăng nhập</th>
                        <th>Email</th>
                        <th class="text center" style="width:180px;">Chức năng</th>
                        <th class="text center" style="width:20px;">ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td><input type="checkbox" name="checkId" value="" /></td>



                        <td>@item.FullName</td>

                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td class="text-center">


                            <a href="@Url.Action("Details","User", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>

                            <a href="@Url.Action("DelTrash","User", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                        <td>@item.Id</td>
                    </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
    <!-- /.card -->

</section>


