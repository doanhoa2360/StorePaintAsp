@model MyClass.Models.Product

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content my-2">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">XÁC NHẬN XÓA SẢN PHẨM</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit","Product", new { id = Model.Id })" class="btn btn-sm btn-success"><i class="fas fa-edit"></i>Cập nhật</a>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i>Về danh sách</a>
                        <button class="btn btn-sm btn-danger" type="submit"><i class="fas fa-trash-alt">Xóa</i></button>
                    </div>
                </div>
            }
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th class="text-info " style="width:120px">Tên trường</th>
                    <th class="text-info ">Nội dung</th>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Name)</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Slug)</td>
                    <td>@Html.DisplayFor(model => model.Slug)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.CatId)</td>
                    <td>@Html.DisplayFor(model => model.CatId)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.MetaKey)</td>
                    <td>@Html.DisplayFor(model => model.MetaKey)</td>
                </tr>
                <tr>
                    <td> @Html.DisplayNameFor(model => model.MetaDesc)</td>
                    <td>@Html.DisplayFor(model => model.MetaDesc)</td>
                </tr>
                <tr>
                    <td> @Html.DisplayNameFor(model => model.CreatedBy)</td>
                    <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.CreatedAt)</td>
                    <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                </tr>
                <tr>
                    <td> @Html.DisplayNameFor(model => model.UpdateBy)</td>
                    <td>@Html.DisplayFor(model => model.UpdateBy)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.UpdateAt)</td>
                    <td>@Html.DisplayFor(model => model.UpdateAt)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Status)</td>
                    <td>@Html.DisplayFor(model => model.Status)</td>
                </tr>
            </table>
        </div>
    </div>
    <!-- /.card -->

</section>