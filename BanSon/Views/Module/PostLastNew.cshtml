@model IEnumerable<MyClass.Models.Post>
<div class="listpost md-4 py-2">
    <div class="card" style="width: 100%;">
        <div class="card-header bg-main">
            BÀI VIẾT MỚI
        </div>
        <div class="list-group-item">
            <div class="row md-3">
                <div class="col-lg-12">
                    @foreach (var post in Model)
                    {
                        <div class="row  ">
                            <div class="col-sm-2">
                                <img src="~/Public/images/Posts/@post.Img " style="width:40px" />
                            </div>
                            <div class="col-sm-10">
                                <h6><a class="text-decoration-none text-uppercase" href="@post.Slug">@post.Title</a></h6>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>






    </div>
</div>
