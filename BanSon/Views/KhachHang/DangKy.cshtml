@model MyClass.Models.User

@{
    ViewBag.Title = "Đăng Ký Tài Khoản";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}



<div class="container pt-4">
    @using (Html.BeginForm("DangKy", "KhachHang", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <section class="container">
            <div class="row">
                <span class="text-center ">
                    <img src="~/Public/images/logo.png"  style="width:180px" />
                </span>
                <span class="text-uppercase text-center text-danger fs-3 fw-bold "> Hãy đăng ký ngay!</span>
            </div>
            <div class="row">
                <div class="col-md-6 py-2">
                    <div class="form-group">
                        <label class="form-label" for="form3Example1c"><strong>Họ Tên</strong></label>
                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="form3Example3c"><strong>Email</strong></label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="form3Example3c"><strong>Điện thoại</strong></label>
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="form3Example3c"><strong>Địa chỉ</strong></label>
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6 p-2">
                    <div class="form-group">
                        <div class="form-group">
                            <label class="form-label" for="form3Example3c"><strong>Giới tính</strong></label>
                            @Html.DropDownListFor(model => model.Gender, new[] { new SelectListItem { Text = "Nam", Value = "2" }, new SelectListItem { Text = "Nữ", Value = "1" } }, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                        </div>
                        <label class="form-label" for="form3Example3c"><strong>Tên đăng nhập</strong></label>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="form3Example4c"><strong>Mật khẩu</strong></label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group py-2 text-center ">
                        <button type="submit" class="btn btn-primary btn-lg" name="create">Đăng ký</button>
                      
                    </div>
                </div>
            </div>
         
        </section>
    }
</div>