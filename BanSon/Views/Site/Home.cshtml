@model IEnumerable<MyClass.Models.Category>
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@section header {
    <link href="~/Public/plugins/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Public/plugins/owlcarousel/assets/owl.theme.default.min.css" rel="stylesheet" />
    <script src="~/Public/plugins/owlcarousel/owl.carousel.min.js"></script>
}
<!-- Messenger Plugin chat Code -->
<div id="fb-root"></div>

<!-- Your Plugin chat code -->
<div id="fb-customer-chat" class="fb-customerchat">
</div>


<section>
    @Html.Action("Slideshow", "Module")
</section>



<section class="maincontent clearfix">
    <div class="container my-3">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="category-title position-relative py-2">
                    <h2 class="text-center text-uppercase text-warning">SẢN PHẨM MỚI</h2>
                    <a class="float-end position-absolute top-0 end-0 py-2 text-decoration-none" href="#">Xem tất cả</a>
                    <div class="row">
                        @foreach (var product in ViewBag.ProductNew)
                        {
                            <div class="col-md-3 text-center card">
                                <a href="@product.Slug">
                                    <img src="~/Public/images/Products/@product.Img" class="img-fluid card-img-top" alt="...">
                                </a>
                                <div class=" card-body">
                                    <h5> <a href="@product.Slug" class="text-decoration-none text-black">  @product.Name </a></h5>
                                    <span class='text-decoration-line-through'>@string.Format("{0:0,0}", product.Price)<sup>đ</sup></span>
                                    <span class='fw-bold fs-5 text-danger'>@string.Format("{0:0,0}", product.PriceSale)<sup>đ</sup></span>
                                    <a href="@Url.Action("CartAdd","Giohang",new {productid=product.Id })" class="btn btn-sm btn-info"><i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng</a>
                                </div>
                            </div>

                        }
                    </div>
                </div>
                @foreach (var category in Model)
                {
                    @Html.Action("HomeProduct", "Site", new { id = category.Id })

                }
                <div>
                    <div id="fb-root"></div>
                    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v14.0&appId=5829073507108478&autoLogAppEvents=1" nonce="o2dVtySy"></script>
                    <div class="fb-comments" data-href="https://localhost:44395/" data-width="" data-numposts="5"></div>
                </div>
                <script src="https://sp.zalo.me/plugins/sdk.js"></script>

                <div class="zalo-chat-widget" data-oaid="579745863508352884" data-welcome-message="Rất vui khi được hỗ trợ bạn!" data-autopopup="0" data-width="100" data-height="100"></div>

                <script src="https://sp.zalo.me/plugins/sdk.js"></script>
                <div class="zalo-share-button" data-href="" data-oaid="579745863508352884" data-layout="1" data-color="blue" data-customize="false"></div>
            </div></div>
    </div>
</section>

