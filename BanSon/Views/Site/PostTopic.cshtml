@model IEnumerable<MyClass.Models.PostInfo>
@{
    var topic = ViewBag.Topic;
}
@{
    ViewBag.Title = topic.Name;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<section class="maincontent clearfix">
    <div class="container my-3">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="post-title position-relative">
                    <h2 class="text-center text-warning">@topic.Name</h2>
                </div>
                @foreach (var post in Model)
                {
                    <div class="row my-4">
                        <div class="col-md-4">
                            <a href="@post.Slug"> <img src="~/Public/images/Posts/@post.Img" class="img-fluid" /> </a>
                        </div>
                        <div class="col-md-8">
                            <a href="@post.Slug"><h3>@post.Title</h3></a>
                            <p>@XString.Str_Limit(post.Detail,100)</p>
                            <div class="text-right"><a href="@post.Slug">Xem thêm</a></div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>

